{{ 'zsempiri-homepage.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign heading = section.settings.heading
-%}

<div class="zsempiri-tiles color-{{ section.settings.color_scheme }}">
  {%- if heading != blank -%}
    <h2 class="zsempiri-tiles__heading">{{ heading }}</h2>
  {%- endif -%}

  <div class="zsempiri-tiles__grid">
    {%- for block in section.blocks -%}
      {%- liquid
        assign tile_image  = block.settings.image
        assign tile_label  = block.settings.label | default: 'Kategória'
        assign tile_link   = block.settings.link   | default: '#'
        assign tile_alt    = tile_label | escape
      -%}
      <a
        class="zsempiri-tile"
        href="{{ tile_link }}"
        {{ block.shopify_attributes }}
        {% if tile_link == '#' %}aria-label="{{ tile_alt }}"{% endif %}
      >
        {%- if tile_image != blank -%}
          {{
            tile_image
            | image_url: width: 600
            | image_tag:
              class: 'zsempiri-tile__image',
              alt: tile_alt,
              loading: 'lazy',
              widths: '300, 400, 600',
              sizes: '(min-width: 750px) 25vw, 50vw'
          }}
        {%- else -%}
          <div class="zsempiri-tile__image" style="background-color: var(--zsempiri-accent-1);"></div>
        {%- endif -%}

        <div class="zsempiri-tile__label">
          <span class="zsempiri-tile__name">{{ tile_label }}</span>
          <span class="zsempiri-tile__arrow" aria-hidden="true">
            <svg viewBox="0 0 12 12" xmlns="http://www.w3.org/2000/svg">
              <path d="M2 6h8M6 2l4 4-4 4" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
            </svg>
          </span>
        </div>
      </a>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Zsempiri — Kat.tiles",
  "tag": "section",
  "class": "section",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Szekció cím",
      "default": "Kategóriák"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Szín séma",
      "options": [
        { "value": "scheme-1", "label": "Cream" },
        { "value": "scheme-2", "label": "Off-white" },
        { "value": "scheme-3", "label": "Wood dark" }
      ],
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "tile",
      "name": "Tile kártya",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Kép"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Felirat",
          "default": "Ajándékok"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Zsempiri — Kat.tiles",
      "blocks": [
        { "type": "tile", "settings": { "label": "Ajándékok" } },
        { "type": "tile", "settings": { "label": "Gyerekvilág" } },
        { "type": "tile", "settings": { "label": "Otthon" } },
        { "type": "tile", "settings": { "label": "Kiegészítők" } }
      ]
    }
  ]
}
{% endschema %}
