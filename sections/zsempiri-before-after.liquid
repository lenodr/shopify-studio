      "id": "label_before",
      "label": "Előtte címke",
      "default": "Nyers fa"
    },
    {
      "type": "image_picker",
      "id": "image_after",
      "label": "Utána kép (Ráfedülő)",
      "info": "Pl. Gravírozott fa"
    },
    {
      "type": "text",
      "id": "label_after",
      "label": "Utána címke",
      "default": "Gravírozott"
    },
    {
      "type": "header",
      "content": "Térköz (Padding)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Felső térköz",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Alsó térköz",
      "default": 36
    }
  ],
